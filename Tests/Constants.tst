;Constant declarationscode Simple type, implicit  const a = 1000  const b = -32767  const c = 'a'  const d = false    var va := a  var vb := b  var vc := c  var vd := dendcodevartype va integervartype vb integervartype vc charvartype vd booleanvarvalue va 1000varvalue vb -32767varvalue vc 'a'varvalue vd falsecode Simple type, Pascal  const a: Integer = 10  const b: Integer = -32767  const c: Char = 'a'  const d: Boolean = false    var va := a  var vb := b  var vc := c  var vd := dendcodevartype va integervartype vb integervartype vc charvartype vd booleanvarvalue va 10varvalue vb -32767varvalue vc 'a'varvalue vd falsecode Simple type, symbol  const a% = 10  const b% = -32767  const c$$ = 'a'  const d? = false    var va := a  var vb := b  var vc := c  var vd := dendcodevartype va integervartype vb integervartype vc charvartype vd booleanvarvalue va 10varvalue vb -32767varvalue vc 'a'varvalue vd false;=============Identifier already definedcode Const name already defined  var a:Integer  const a=10endcodecompile errorcode Var name already defined  const a=10  var a:Integerendcodecompile error;============Sub-scopescode Local noexec  var x:=1  if x=2 then  begin    const y=100	x:=y  endendcodevarvalue x 1code Local exec  var x:=1  if x=1 then  begin    const y=100	x:=y  endendcodevarvalue x 100code Local scoped  var x:=1  if x=1 then    const y=100  x:=yendcodecompile error