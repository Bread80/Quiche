;===========DIRECTIVES;========SYNTAXcode Multiple 1  {$R-,O-}  var a:=1000endcodecompile noerrorcode Multiple 2  {$R-  $O-}  var a:=1000endcodecompile noerrorcode Bracket star comments  (*$R-*)  var a:=1000endcodecompile noerror;======OVERFLOW$overflow oncode Overflow off  {$O-}  var a:=1000  a := a*aendcoderuntime noerror$overflow offcode Overflow on  {$O+}  var a:=1000  a := a*aendcoderuntime error;======RANGE$range oncode Range off  {$R-}  var a:=1000  var b:Byte  b := aendcoderuntime noerror$range offcode Range on  {$R+}  var a:=1000  var b:Byte  b := aendcoderuntime error